<head>
    <% var subtitle; %>
    <% if (is_home()) { %>
    <% subtitle = "主页"; %>
    <% } else if (is_current("category")) { %>
    <% subtitle = "分类"; %>
    <% } else if (is_current("recent")) { %>
    <% subtitle = "最近"; %>
    <% } else if (is_current("about")) { %>
    <% subtitle = "关于"; %>
    <% } %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >
    <meta name="author" content="<%- theme.author %>">
    <meta name="renderer" content="webkit">
    <meta name="copyright" content="<%- theme.author %>">
    <meta name="keywords" content="<%- theme.keywords %>">
    <meta name="description" content="<%- theme.description %>">
    <meta name="subtitle" content="<%- theme.subtitle %>">
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title><%= subtitle + " | " + theme.title %></title>
    <link rel="icon" href= "<%- url_for(theme.favicon) %>" />
    <%- css('css/style.css') %>
    <%- js('js/jquery-3.3.1.min.js') %>
    <%- js('js/horse.js') %>
</head>