html, body, header, nav, div, ul, li {
    padding 0;
    margin 0;
}

.header-nav  {
    width 100%;
    height 50px;
    background-color #FFF;
}

.header-nav-div {
    padding 0 10px;
    margin 0 auto;
    max-width 1000px;
    height 100%;
    background-color #FFF;
}

.header-nav-img {
    width 128px;
    height 20px;
    margin-top 15px;
}

.header-nav-ul {
    overflow hidden;
    float right;
}

.header-nav-li {
    padding 0 10px;
    height 50px;
    box-sizing border-box;
    border-top 1px solid #FFF;
    float left;
    display: inline-block;
}

.header-nav-a {
    line-height 50px;
    color #999;
    text-decoration none;
    font-family "Roboto";
    font-size 12px;

    &:hover {
        color #6DBEFB;
    }
}