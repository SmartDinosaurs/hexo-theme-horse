
.img-div {
    height 40vh;
}

.img-wrapper {
    height 100%;
    position relative;
}

.img-scroll {
    height 100%;
    position relative;
    overflow hidden;
}

.img-scroll img{
    position absolute;
    width 100%;
    height 100%;
    left 100%;
    background-repeat no-repeat;
    background-position center center;
    background-size cover;
    background-color transparent;
}

.img-prev {
    width 30px; 
    height 30px;
    display block;
    position absolute;
    top: 50%;
    transform: translateY(-50%);
    left 5vh;
    background url("/images/button1.png") 0px 0px;
    display: none;

    &:hover {
        background-position 0px -30px;
    }
}

.img-next {
    width 30px; 
    height 30px;
    display block;
    position absolute;
    top: 50%;
    transform: translateY(-50%);
    right 5vh;
    background url("/images/button1.png") -30px 0px;
    display: none;

    &:hover {
        background-position -30px -30px;
    }
}

.img-circle-wrapper {
    width 80px;
    height 20px;
    position absolute;
    left calc(50% - 40px);
    bottom 2vh;
    text-align center;
}

.img-circle-wrapper span {
    width 10px;
    height 10px;
    display inline-block;
    border-radius: 50%;
    background-color #999999;
    margin auto 2px;
}

.img-circle-wrapper span.hover {
    background-color #6DBEFB;
}